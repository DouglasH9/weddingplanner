@{
    ViewData["Title"] = "Login";
}
@model LoginUser

<div class="w-50 mx-auto">
    <a class="btn" style="background-color: rebeccapurple; color: white;" href="/Index">Register for an account</a>
    <h1>Successfully registered! Please Login!</h1>
    <form asp-action="LoginUser" asp-controller="Home">
        <div class="form-group">
            <Label asp-for="LoginEmail">Email:</Label>
            <input class="form-control" asp-for="LoginEmail" type="text" name="LoginEmail" id="LoginEmail">
            <span class="alert-danger" asp-validation-for="LoginEmail"></span>
        </div>
        <div class="form-group">
            <Label asp-for="LoginPassword">Password:</Label>
            <input class="form-control" asp-for="LoginPassword" type="password" name="LoginPassword" id="LoginPassword">
            <span class="alert-danger" asp-validation-for="LoginPassword"></span>
        </div>
        <div class="form-group">
            
            <input class="btn btn-primary" type="submit" name="submit" id="submit">
        </div>
    </form>
</div>